    }
    .alert-custom-danger {
        background-color: #fff1f2;
        color: #991b1b;
        border-left: 5px solid #ef4444 !important;
    }
</style>

@code {
    private List<Transaction>? transactions;
    private string? errorMessage;
    private bool isProcessing;
    private decimal TotalIncome { get; set; }
    private decimal TotalExpenses { get; set; }
    private decimal NetBalance { get; set; }
    private readonly CultureInfo fiCulture = CultureInfo.GetCultureInfo("fi-FI");

    private async Task OnInputFileChange(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        transactions = null;
        TotalIncome = 0;
        TotalExpenses = 0;
        NetBalance = 0;
        isProcessing = true;
        StateHasChanged();

        try
        {
            var pdfText = await ReadPdfText(e.File);
            ParseTransactions(pdfText);
        }
        catch (Exception ex)
        {
            errorMessage = "Error reading or parsing PDF file: " + ex.Message;
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task<string> ReadPdfText(IBrowserFile file)
    {
        await using var memoryStream = new MemoryStream();
        await file.OpenReadStream(maxAllowedSize: 10240000).CopyToAsync(memoryStream);
        memoryStream.Position = 0;

        using var document = PdfDocument.Open(memoryStream);
        var text = new StringBuilder();
        foreach (var page in document.GetPages())
        {
            text.AppendLine(page.Text);
        }
        return text.ToString();
    }

    private void ParseTransactions(string text)
    {
        transactions = new List<Transaction>();
        
        // Strict pattern for OP transactions: Date Sign Amount Type
        var txRegex = new Regex(@"(\d{1,2}\.\d{1,2}\.\d{4})([\+\u2212\-])([\d\s\u00A0]{1,10},\d{2})(PKORTTIMAKSU|TILISIIRTO|PANO|OTTO|AUTOMAATTI|PALVELUMAKSU|KORKO|VERO|ARVOPAPERI|LUOTON|VALUUTTA)", RegexOptions.Compiled);
        
        var matches = txRegex.Matches(text);
        
        for (int i = 0; i < matches.Count; i++)
        {
            var match = matches[i];
            string dateStr = match.Groups[1].Value;
            string sign = match.Groups[2].Value;
            string amountStr = match.Groups[3].Value.Replace("\u00A0", "").Replace(" ", ""); 
            string type = match.Groups[4].Value;

            if (DateOnly.TryParse(dateStr, fiCulture, out var date))
            {
                if (decimal.TryParse(amountStr, NumberStyles.Any, fiCulture, out var amount))
                {
                    if (sign == "\u2212" || sign == "-") amount = -amount;
                    
                    int startOfSearch = match.Index + match.Length;
                    // Stop at the next transaction or next line
                    int endOfSearch = (i < matches.Count - 1) ? matches[i+1].Index : text.Length;
                    
                    string rawDesc = text.Substring(startOfSearch, endOfSearch - startOfSearch);
                    
                    // Further limit to just the first line of the snippet to avoid capturing next trans footer
                    rawDesc = rawDesc.Split('\n')[0];

                    transactions.Add(new Transaction 
                    { 
                        Date = date, 
                        Description = SanitizeDescription(rawDesc, type), 
                        Amount = amount 
                    });
                }
            }
        }

        if (transactions.Any())
        {
            TotalIncome = transactions.Where(t => t.Amount > 0).Sum(t => t.Amount);
            TotalExpenses = transactions.Where(t => t.Amount < 0).Sum(t => t.Amount);
            NetBalance = TotalIncome + TotalExpenses;
        }
        else
        {
            errorMessage = "No transactions found. Please ensure this is an OP bank statement PDF.";
        }
    }

    private string SanitizeDescription(string raw, string type)
    {
        if (string.IsNullOrWhiteSpace(raw)) return type;
        
        // Remove known noise
        var noise = new[] { "Tiliote", "Käyttötili", "Ajalta", "Jatkuu", "Sivu", "Tilinumero", "Kirjaus-päivä", "Arvopäivä", "Saldo", "yhteensä" };
        foreach (var n in noise) {
            if (raw.Contains(n)) raw = raw.Split(n)[0];
        }

        // Split and filter parts
        var parts = raw.Split(new[] { ' ', '\t' }, StringSplitOptions.RemoveEmptyEntries);
        
        // Remove parts that are purely technical IDs (long hex/digits)
        var filteredParts = parts.Where(p => 
            p.Length < 12 || 
            !Regex.IsMatch(p, @"\d") ||
            Regex.IsMatch(p, @"^[A-Z]{2,}\d+") // ID like FI123...
        ).ToList();
        
        // Remove technical terms
        var keywordsToRemove = new[] { "VIESTI", "SEPA-MAKSU", "MAKSUSTOESI", "ARKISTOINTI", "VARMENTAJA", "VIITE" };
        filteredParts = filteredParts.Where(p => 
            !keywordsToRemove.Any(k => p.Equals(k, StringComparison.OrdinalIgnoreCase))
        ).ToList();

        var result = string.Join(" ", filteredParts).Trim();
        
        // Remove leading non-letters/numbers
        result = Regex.Replace(result, @"^[^A-ZÄÖa-z0-9]+", "").Trim();
        
        // Secondary ID cleanup - remove anything that looks like "622277..." at the start
        result = Regex.Replace(result, @"^\d{8,}[A-Z0-9]*\s?", "");

        return string.IsNullOrWhiteSpace(result) ? type : result;
    }
}
