@page "/"
@using System.Globalization
@using UglyToad.PdfPig
@using UglyToad.PdfPig.Content
@using System.Text

<PageTitle>OPBudgetor - Financial Insights</PageTitle>

<div class="container py-5">
    <div class="header text-center mb-5 anim-fade-in">
        <h1 class="display-3 fw-bold text-gradient">OPBudgetor</h1>
        <p class="lead text-secondary">Advanced financial analysis for your OP bank statements.</p>
    </div>

    <div class="upload-section card shadow-lg p-5 mb-5 border-0 rounded-5 glass-effect anim-slide-up">
        <div class="card-body text-center">
            <div class="mb-4">
                <div class="upload-icon-wrapper mx-auto mb-3">
                    <i class="bi bi-cloud-upload text-primary display-4"></i>
                </div>
            </div>
            <label for="pdfUpload" class="form-label h4 mb-3 fw-semibold">Drop your statement here</label>
            <InputFile id="pdfUpload" OnChange="OnInputFileChange" accept=".pdf" class="form-control form-control-lg custom-file-input" />
            <div class="form-text mt-3 opacity-75">Supported: OP Bank PDF Statements (Max 10MB)</div>
        </div>
    </div>

    @if (isProcessing)
    {
        <div class="text-center my-5 anim-pulse">
            <div class="spinner-grow text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-4 h5 text-primary fw-medium">Analyzing transaction patterns...</p>
        </div>
    }

    @if (transactions != null && transactions.Any())
    {
        <div class="row g-4 mb-5 anim-fade-in">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 stats-card income-bg transition-hover">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-uppercase small fw-bold text-success">Total Income</span>
                            <i class="bi bi-arrow-up-circle-fill text-success fs-4"></i>
                        </div>
                        <h2 class="fw-bold mt-2">@TotalIncome.ToString("C", CultureInfo.GetCultureInfo("fi-FI"))</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 stats-card expense-bg transition-hover">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-uppercase small fw-bold text-danger">Total Expenses</span>
                            <i class="bi bi-arrow-down-circle-fill text-danger fs-4"></i>
                        </div>
                        <h2 class="fw-bold mt-2">@TotalExpenses.ToString("C", CultureInfo.GetCultureInfo("fi-FI"))</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 stats-card balance-bg transition-hover">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-uppercase small fw-bold text-primary">Net Balance</span>
                            <i class="bi bi-wallet2 text-primary fs-4"></i>
                        </div>
                        <h2 class="fw-bold mt-2 @(NetBalance >= 0 ? "text-dark" : "text-warning")">@NetBalance.ToString("C", CultureInfo.GetCultureInfo("fi-FI"))</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100 anim-slide-right">
                    <h5 class="card-title mb-4 fw-bold d-flex align-items-center">
                        <i class="bi bi-pie-chart-fill text-primary me-2"></i> Expense Distribution
                    </h5>
                    <div class="chart-container">
                        <ExpenseChart Transactions="transactions" />
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                 <div class="card border-0 shadow-sm rounded-4 p-4 h-100 anim-slide-left">
                    <h5 class="card-title mb-4 fw-bold">Financial Summary</h5>
                    <div class="summary-list">
                        <div class="summary-item mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted">Transaction Count</span>
                                <span class="fw-bold">@transactions.Count</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar" role="progressbar" style="width: 100%"></div>
                            </div>
                        </div>
                        <div class="summary-item mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted">Largest Single Expense</span>
                                <span class="fw-bold text-danger">@transactions.Where(t=>t.Amount < 0).MinBy(t=>t.Amount)?.Amount.ToString("C", CultureInfo.GetCultureInfo("fi-FI"))</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 100%"></div>
                            </div>
                        </div>
                        <div class="summary-item mb-4">
                             <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted">Daily Average Spends</span>
                                @{
                                    var days = (transactions.Max(t => t.Date).ToDateTime(TimeOnly.MinValue) - transactions.Min(t => t.Date).ToDateTime(TimeOnly.MinValue)).TotalDays;
                                    if (days == 0) days = 1;
                                    var avg = Math.Abs(TotalExpenses) / (decimal)days;
                                }
                                <span class="fw-bold text-primary">@avg.ToString("C", CultureInfo.GetCultureInfo("fi-FI"))</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 100%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-auto pt-4 border-top">
                        <small class="text-muted d-block">Period covered:</small>
                        <span class="fw-semibold">@transactions.Min(t => t.Date).ToShortDateString() — @transactions.Max(t => t.Date).ToShortDateString()</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-5 anim-fade-in">
            <div class="card-header bg-white p-4 border-0 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Recent Transactions</h5>
                <button class="btn btn-sm btn-outline-primary rounded-pill px-3">Export CSV</button>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 border-0">DATE</th>
                            <th class="border-0">DESCRIPTION / PAYEE</th>
                            <th class="text-end pe-4 border-0">AMOUNT</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in transactions.OrderByDescending(t => t.Date))
                        {
                            <tr class="transaction-row">
                                <td class="ps-4 text-muted small">@transaction.Date.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="fw-medium">@transaction.Description</div>
                                </td>
                                <td class="text-end pe-4 fw-bold @(transaction.Amount >= 0 ? "text-success" : "text-dark")">
                                    @(transaction.Amount > 0 ? "+" : "") @transaction.Amount.ToString("N2", CultureInfo.GetCultureInfo("fi-FI")) €
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-custom-danger shadow border-0 rounded-4 mt-4 p-4 anim-shake" role="alert">
            <div class="d-flex">
                <i class="bi bi-bug-fill fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading fw-bold">Processing Error</h5>
                    <p class="mb-0">@errorMessage</p>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #1b6ec2, #00d2ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .glass-effect {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .stats-card {
        border-radius: 1.5rem !important;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .transition-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    .income-bg { background-color: #f0fdf4; border: 1px solid #dcfce7 !important; }
    .expense-bg { background-color: #fef2f2; border: 1px solid #fee2e2 !important; }
    .balance-bg { background-color: #eff6ff; border: 1px solid #dbeafe !important; }
    
    .anim-fade-in { animation: fadeIn 0.8s ease-out; }
    .anim-slide-up { animation: slideUp 0.6s ease-out; }
    .anim-slide-right { animation: slideRight 0.6s ease-out; }
    .anim-slide-left { animation: slideLeft 0.6s ease-out; }
    .anim-pulse { animation: pulse 2s infinite; }
    .anim-shake { animation: shake 0.5s; }

    @@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    @@keyframes slideUp { from { transform: translateY(30px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
    @@keyframes slideRight { from { transform: translateX(-30px); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @@keyframes slideLeft { from { transform: translateX(30px); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @@keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.6; } 100% { opacity: 1; } }
    @@keyframes shake { 0%, 100% { transform: translateX(0); } 25% { transform: translateX(-5px); } 75% { transform: translateX(5px); } }

    .transaction-row:hover {
        background-color: #f8f9fa;
        cursor: default;
    }
    .chart-container {
        min-height: 300px;
    }
    .alert-custom-danger {
        background-color: #fff1f2;
        color: #991b1b;
        border-left: 5px solid #ef4444 !important;
    }
</style>

@code {
    private List<Transaction>? transactions;
    private string? errorMessage;
    private bool isProcessing;
    private decimal TotalIncome { get; set; }
    private decimal TotalExpenses { get; set; }
    private decimal NetBalance { get; set; }

    private async Task OnInputFileChange(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        transactions = null;
        TotalIncome = 0;
        TotalExpenses = 0;
        NetBalance = 0;
        isProcessing = true;
        StateHasChanged();

        try
        {
            var pdfText = await ReadPdfText(e.File);
            ParseTransactions(pdfText);
        }
        catch (Exception ex)
        {
            errorMessage = "Error reading or parsing PDF file: " + ex.Message;
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task<string> ReadPdfText(IBrowserFile file)
    {
        await using var memoryStream = new MemoryStream();
        await file.OpenReadStream(maxAllowedSize: 10240000).CopyToAsync(memoryStream);
        memoryStream.Position = 0;

        using var document = PdfDocument.Open(memoryStream);
        var text = new StringBuilder();
        foreach (var page in document.GetPages())
        {
            text.AppendLine(page.Text);
        }
        return text.ToString();
    }

    private void ParseTransactions(string text)
    {
        transactions = new List<Transaction>();
        var lines = text.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries);
        
        var fiCulture = CultureInfo.GetCultureInfo("fi-FI");
        
        foreach (var line in lines)
        {
            var parts = line.Split(new[] { ' ', '\t' }, StringSplitOptions.RemoveEmptyEntries);
            if (parts.Length < 3) continue;

            // OP Statements: Date is first (DD.MM.YYYY)
            if (DateOnly.TryParse(parts[0], fiCulture, out var date) || 
                DateOnly.TryParse(parts[0], CultureInfo.InvariantCulture, out date))
            {
                // We look for the amount. In OP statements, it's often followed by balance.
                // Typical line: 01.12.2023 01.12.2023 -12,50 1500,00 Grocery Store
                // and sometimes the description comes after amount or before.
                
                decimal? foundAmount = null;
                int amountIndex = -1;

                // Scan for something that looks like an amount (has comma or matches number pattern)
                for (int i = 1; i < parts.Length; i++)
                {
                    var p = parts[i];
                    // Skip if it looks like another date
                    if (DateOnly.TryParse(p, fiCulture, out _) || DateOnly.TryParse(p, CultureInfo.InvariantCulture, out _))
                        continue;

                    if (decimal.TryParse(p, NumberStyles.Any, fiCulture, out var val) ||
                        decimal.TryParse(p, NumberStyles.Any, CultureInfo.InvariantCulture, out val))
                    {
                        // In Finnish PDFs, thousands separator is sometimes space, handled by Split already.
                        // But decimal is comma.
                        foundAmount = val;
                        amountIndex = i;
                        break; 
                    }
                }

                if (foundAmount.HasValue)
                {
                    // Description is the rest of the parts excluding dates and the first amount found
                    var descParts = parts.Skip(1).ToList();
                    descParts.RemoveAt(amountIndex - 1); 
                    // remove second date if present (value date)
                    if (descParts.Count > 0 && (DateOnly.TryParse(descParts[0], fiCulture, out _) || DateOnly.TryParse(descParts[0], CultureInfo.InvariantCulture, out _)))
                    {
                        descParts.RemoveAt(0);
                    }
                    
                    var description = string.Join(" ", descParts).Trim();
                    if (string.IsNullOrEmpty(description)) description = "Unspecified Transaction";

                    transactions.Add(new Transaction 
                    { 
                        Date = date, 
                        Description = description, 
                        Amount = foundAmount.Value 
                    });
                }
            }
        }

        if (transactions.Any())
        {
            TotalIncome = transactions.Where(t => t.Amount > 0).Sum(t => t.Amount);
            TotalExpenses = transactions.Where(t => t.Amount < 0).Sum(t => t.Amount);
            NetBalance = TotalIncome + TotalExpenses;
        }
        else
        {
            errorMessage = "No transactions found. Please ensure this is an unencrypted OP Bank Statement PDF.";
        }
    }
}
